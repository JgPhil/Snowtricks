{% block body %}
	<div class="container">


		<div class="mb-5">
			<div>
				<h2>Figures</h2>
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Titre</th>
							<th>Categorie</th>
							<th>Date de dernière modification</th>
							<th>Auteur</th>
							<th>Activation</th>
						</tr>
					</thead>

					<div id="js-figures">
						{% for figure in figures %}
							<tbody>
								<tr>
									<td>{{figure.id }}</td>
									<td>{{figure.title }}</td>
									<td>{{figure.category.title}}
									</td>
									<td>{{figure.createdAt|date }}</td>
									<td>{{figure.author.username }}</td>
									<td>
										{% if figure.activatedAt is not null %}
											<a href="{{ path('admin_figure_desactivate', { id: figure.id }) }}" activation="true" data-token="{{ csrf_token('delete' ~ figure.id)}}" class="btn btn-warning btn-sm">Désactiver</a>
											<a href="{{ path('admin_figure_activate', { id: figure.id }) }}" hidden activation="false" data-token="{{ csrf_token('activate' ~ figure.id)}}" class="btn btn-success btn-sm">Activer</a>
										{% else %}
											<a href="{{ path('admin_figure_desactivate', { id: figure.id }) }}" hidden activation="true" data-token="{{ csrf_token('delete' ~ figure.id)}}" class="btn btn-warning btn-sm">Désactiver</a>
											<a href="{{ path('admin_figure_activate', { id: figure.id }) }}" activation="false" data-token="{{ csrf_token('activate' ~ figure.id)}}" class="btn btn-success btn-sm">Activer</a>
										{% endif %}
									</td>
								</tr>

							{% endfor %}
						</div>
					</tbody>
				</table>
			</div>

			<div class="pagination_btn">
				{# <button class="btn btn-primary" id="prvs_figures_pgn" hidden>Préc.</button> #}
				{# <button class="btn btn-primary" id="next_figures_pgn">Suiv.</button> #}


				<div class="pagination">
					<div class="pagination-buttons link_blog text-center">
					{% if pagination.page > 1 %}
					<a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page - 1 })) }}"><<a>
					{% endif %}

					{% if figures_count != 0 %}
					{% for p in range(max(pagination.page-2, 1), min(pagination.page+2, pagination.pages_count)) %}
						<a{% if p == pagination.page %} class="current-page"{% endif %} href="{{ path(pagination.route, pagination.route_params|merge({'page': p })) }}">{{ p }}</a>
					{% endfor %}
					{% endif %}

					{% if pagination.page < pagination.pages_count %}
					<a href="{{ path(pagination.route, pagination.route_params|merge({'page': pagination.page + 1 })) }}" id="next_figures_pgn">></a>
					{% endif %}
					</div>
				</div>
			</div>
		</div>
